{
  "manifest_version": 3,
  "name": "JobTrackr Scraper",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save Job to JobTrackr"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5050/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["*://*/*"]
    }
  ]
}
